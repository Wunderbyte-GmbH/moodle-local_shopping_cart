<div class="shopping-cart-checkout-manager-container">
    <!-- Country Selection -->
    <div class="shopping-cart-checkout-manager-form-group">
        <label for="country-select" class="shopping-cart-checkout-manager-form-label">
            Select your country
        </label>
        <select
            id="shopping-cart-checkout-manager-country-select"
            class="shopping-cart-checkout-manager-form-select"
            name="country"
        >
            {{#countries}}
                <option value={{code}}>{{name}}</option>
            {{/countries}}
        </select>
    </div>

    <!-- VAT Number Input -->
    <div class="shopping-cart-checkout-manager-form-group">
        <label for="vat-number" class="shopping-cart-checkout-manager-form-label">
            Enter your VAT number
        </label>
        <input
            type="text"
            id="shopping-cart-checkout-manager-vat-number"
            name="vat_number"
            class="shopping-cart-checkout-manager-form-input"
            placeholder="Enter VAT number"
        />
    </div>

    <!-- Verification Button -->
    <div class="shopping-cart-checkout-manager-form-group">
        <button
            id="shopping-cart-checkout-manager-verify-vat"
            class="shopping-cart-checkout-manager-btn shopping-cart-checkout-manager-btn-primary"
        >
            Verify validity of VAT number
        </button>
    </div>
</div>

