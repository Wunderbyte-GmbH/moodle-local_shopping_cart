{{!
    @template local_shopping_cart/shopping_cart_item

    This template will render the shopping_cart items.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "itemid": 3,
        "componentname": "mod_booking",
        "price": 133,
        "expirationdate": 1642155164,
        "itemname": "Tenniscourse"
    }

}}

<li id="item-{{componentname}}-{{itemid}}"
class="clearfix"
data-price='{{price}}'
data-name='{{itemname}}'
data-component='{{componentname}}'
data-id='{{itemid}}'
data-currency='{{currency}}'
data-userid='{{userid}}'>
    <span class="item-name"><i class="fa fa-futbol-o" aria-hidden="true"></i> {{itemname}}</span>
    {{#iscashier}}
        <span class="pull-right"><i class="fa fa-eur shopping-cart-lighter-text pl-2" aria-hidden="true" data-id="item-{{componentname}}-{{itemid}}" data-action="discount" data-userid="{{userid}}"></i></span>
    {{/iscashier}}
    <span class="pull-right"><i class="fa fa-trash-o shopping-cart-lighter-text pl-2" aria-hidden="true" data-id="item-{{componentname}}-{{itemid}}" data-action="delete" data-userid="{{userid}}"></i></span>
    <span class="item-price pull-right">{{price}}  {{currency}}</span>
</li>
