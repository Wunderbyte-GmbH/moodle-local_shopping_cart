{{!
    @template local_shopping_cart/checkout

    This template will render the shopping cart checkout pate.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
    }
}}

<div class="shopping-cart-items">
    {{#items}}
        {{> local_shopping_cart/shopping_cart_item }}
        <div class="shopping_cart-paymentbutton">{{{button}}}</div>
    {{/items}}
    {{^items}}
        <div class="text-center">{{#str}} cartisempty, local_shopping_cart {{/str}}</div>
    {{/items}}
</div>

{{#installments}}
    <div class="itemname font-weight-bold">
        {{itemname}}
    </div>
    <div class="firstpayment">
        {{currency}} {{initialpayment}} {{#str}} insteadof, local_shopping_cart {{/str}} {{currency}} {{originalprice}}
    </div>
    <div class="furtherpayments">
        {{#str}} furtherpayments, local_shopping_cart {{/str}}:
        {{#payments}}
            <div>{{currency}} {{amount}} {{#str}} on, local_shopping_cart {{/str}} {{date}} </div>
        {{/payments}}
    </div>
{{/installments}}
