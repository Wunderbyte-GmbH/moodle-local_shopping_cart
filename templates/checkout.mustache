{{!
    @template message_output_popup/shopping_cart_popover

    This template will render the shopping_cart popover for the navigation bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "userid": 3,
        "urls": {
            "preferences": "http://www.moodle.com"
        }
    }

}}
<style>


.fa-futbol-o {
    color: var(--success) !important;
}

.checkout .row {
  height: 2em;

}
.checkout .row:nth-child("even") {
    background: ABB0BE;
}

.lighter {
  color: #ABB0BE;
}

.checkoutgrid {
  display: grid; 
  grid-template-columns: 2fr 1fr; 
  grid-template-rows: 1fr; 
  gap: 10px 10px; 
  grid-template-areas: 
    "checkout proceed"; 
}
.checkout { grid-area: checkout; }
.proceed { grid-area: proceed; }
.proceed ul {
  list-style-type: none;
  padding:10px;
}
.checkoutgrid .checkout ul.list-group {
  padding: 0px;
}
.secondarynavigation {
  display: none;
}
</style>



<div class="checkoutgrid">
   <div class="container-fluid checkout">
      <ul class="list-group">
         {{#item}}
         <li class="list-group-item ">    
            <span class="item-name"><i class="fa fa-futbol-o" aria-hidden="true"></i> {{name}}</span> 
            <span class="pull-right ml-2"><i class="fa fa-trash-o lighter-text" aria-hidden="true" onclick="alert('delete')"></i></span>
            <span class="item-price pull-right"> {{price}} </span><br> 
            <span class="lighter"><i class="fa fa-clock-o" aria-hidden="true"></i>  Do 9:00 - 10:00</span><span class="pull-right"><i class="fa fa-map-o" aria-hidden="true"></i>  {{item.location}} </span><br><span class="lighter"> {{item.shortsummary}} </span>
         </li>
         {{/item}}
      </ul>
   </div>
   <aside class="proceed pull-left">
      <div class="card" style="max-width: 400px;">
      
         <ul class="shopping-cart-items px-4">
            <li class="clearfix">
               <span class="item-name"><i class="fa fa-futbol-o" aria-hidden="true"></i> Volleyball</span>
               <span class="item-price pull-right">45€</span>            
            </li>
            <li class="clearfix">
               <span class="item-name"><i class="fa fa-futbol-o" aria-hidden="true"></i> Basketball</span>
               <span class="item-price pull-right">25€</span>
            </li>
            <li class="clearfix">
               <div class="pull-right">   <span class="lighter-text">Total:</span>
                  <span class="main-color-text total">70€</span>
               </div>
            </li>
            <li class="mt-2">
               <a href="#" class="btn btn-primary pull-right">Proceed <i class="fa fa-chevron-right"></i></a>
            </li>
         </ul>
      </div>
</div>
</aside>