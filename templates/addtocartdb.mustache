{{!
    @template message_output_popup/shopping_cart_popover

    This template will render the shopping_cart popover for the navigation bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "itemid": 3,
        "componentname": "mod_booking",
        "area": "main",
        "price": 133,
        "expirationtime": 1642155164,
        "itemname": "Tenniscourse"
    }

}}
<div class="btn btn-secondary w-100 mt-0 mb-0 p-1 wb_shopping_cart booking-button-area "
        id="btn-{{componentname}}-{{area}}-{{itemid}}"
        tabindex="0"
        data-itemid="{{itemid}}"
        {{#nojs}}
            data-nojs="1"
        {{/nojs}}
        data-userid="{{userid}}"
        data-objecttable="local_shopping_cart"
        data-component="{{componentname}}"
        data-area="{{area}}"
        data-installment="{{installment}}">
  <i class="fa fa-cart-plus" aria-hidden="true"></i>
  <span class="addtocartstring">{{#str}} addtocart, local_shopping_cart {{/str}}</span>
</div>

{{#js}}
    require(['local_shopping_cart/cart'], function(fn) {
        fn.buttoninit("{{itemid}}", "{{componentname}}", "{{area}}");
    });
{{/js}}
