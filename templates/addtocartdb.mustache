{{!
    @template message_output_popup/shopping_cart_popover

    This template will render the shopping_cart popover for the navigation bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "userid": 3,
        "urls": {
            "preferences": "http://www.moodle.com"
        }
    }

}}
<button class="btn btn-light mt-0 mb-0 p-0 wb_shopping_cart"
        id="btn-{{componentname}}-{{itemid}}"
        data-id="id"
        data-userid="{{userid}}"
        data-objecttable="booking"
        data-component="{{componentname}}">
  <i class="fa fa-cart-plus" aria-hidden="true"></i>
  <span class="addtocartstring">{{#str}} addtocart, local_shopping_cart {{/str}}</span>
</button>

{{#js}}
    require(['local_shopping_cart/cart'], function(cart) {
    cart.buttoninit({{itemid}}, "{{componentname}}");
    });
{{/js}}