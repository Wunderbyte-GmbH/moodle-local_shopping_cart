{{!
    @template message_output_popup/shopping_cart_popover

    This template will render the shopping_cart popover for the navigation bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "userid": 3,
        "urls": {
            "preferences": "http://www.moodle.com"
        }
    }

}}
<style>
.fa-futbol-o {
    color: var(--success) !important;
}

.checkout .row {
  height: 2em;
}

.checkout .row:nth-child("even") {
    background: ABB0BE;
}

.lighter {
  color: #ABB0BE;
}

.checkoutgrid {
  display: grid; 
  grid-template-columns: 2fr 1fr; 
  grid-template-rows: 1fr; 
  gap: 10px 10px; 
  grid-template-areas: 
    "checkout proceed"; 
}

.checkout { grid-area: checkout; }
.proceed { grid-area: proceed; }
.proceed ul {
  list-style-type: none;
  padding:10px;
}

.checkoutgrid .checkout ul.list-group {
  padding: 0px;
}

.secondarynavigation {
  display: none;
}
</style>

<button class="btn btn-primary" id="btn-{{id}}" data-id="id" data-objecttable="booking">
  <i class="fa fa-cart-plus" aria-hidden="true"></i> Add to Cart
</button>

{{#js}}   
require(['local_shopping_cart/cart'], function(cart) {
  document.querySelector('#btn-{{id}}').addEventListener('click', event => {
        console.log("click");
        event.preventDefault();
        event.stopPropagation();
        cart.addItem();
    }) 
});
{{/js}}