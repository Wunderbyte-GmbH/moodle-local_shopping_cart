{{!
    @template message_output_popup/shopping_cart_popover

    This template will render the shopping_cart popover for the navigation bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "itemid": 3,
        "componentname": 'mod_booking',
        "price": 133,
        "expirationdate": 1642155164,
        "itemname": Tenniscourse
    }

}}

{{#credit}}
    <li class="list-group-item flex-column align-items-start text-dark shopping_cart_history_paidback">
    <div class="d-flex w-100 justify-content-between">
        <h5>
        <span class="credit_total">
            {{credit}}
        </span>
        <span class="currency_credit">
            {{currency}}
        </span></h5>
    </div>
    <button type="button" class="shopping_cart_history_paidback_button btn btn-success btn-sm pull-right"
        data-userid='{{userid}}'>
        {{#str}} deletecredit, local_shopping_cart {{/str}}
    </button>
    </li>
{{/credit}}