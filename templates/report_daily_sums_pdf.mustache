{{!
    @template local_shopping_cart/report_daily_sums_pdf

    This template will render the daily sums for the cash report.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "todo": "todo"
    }
}}
<div style="width: fit-content;">
  <div style="font-weight: bold; font-size: xx-large;">{{#str}} titledailysums, local_shopping_cart {{/str}} ({{date}})</div>
  <div style="background-color: #DBF9DB; border: 1px dashed #000; width: fit-content; padding: 10px; font-weight: bold; font-size: x-large;">
    {{#str}}titledailysums:total, local_shopping_cart{{/str}}: {{currency}} {{totalsum}}
  </div>
  <div>
    {{#dailysums:exist}}
      <div style="font-weight: bold; font-size: large;">{{#str}} titledailysums:all, local_shopping_cart {{/str}}:</div>
      <table style="border: 1px solid #000;">
      {{#dailysums}}
        <tr style="border: 1px solid #000;">
          <td style="border: 1px solid #000;"><strong>{{paymentmethod}}</strong></td>
          <td style="border: 1px solid #000;">{{currency}} {{dailysumformatted}}</td>
        </tr>
      {{/dailysums}}
      </table>
    {{/dailysums:exist}}
  </div>
</div>
