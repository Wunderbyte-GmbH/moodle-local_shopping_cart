{{!
    @template message_output_popup/shopping_cart_popover

    This template will render the shopping_cart popover for the navigation bar.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "userid": 3,
        "urls": {
            "preferences": "http://www.moodle.com"
        }
    }

}}

<div class="row">
    <div class="col-md-6 mx-auto mt-5">
        <div class="card payment payment-success">
        <div class="card-header payment_header">
            <div class="check"><i class="fa fa-check-o" aria-hidden="true"></i></div>
        </div>
        <div class="card-body">
            <h1>{{#str}} paymentsuccessful, local_shopping_cart {{/str}}</h1>
            <p>{{#str}} paymentsuccessfultext, local_shopping_cart {{/str}}</p>
            <p>
                <ul class="list-group">
                    {{#histoyitems}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>{{itemname}}</span>
                        <span class="bg-success text-white">{{#str}} success, local_shopping_cart {{/str}}</span>
                    </li>
                    {{/histoyitems}}
                </ul>
            </p>
            <a href="../../my" class="btn btn-success">{{#str}} backtohome, local_shopping_cart {{/str}}</a>
        </div>
        </div>
    </div>
</div>