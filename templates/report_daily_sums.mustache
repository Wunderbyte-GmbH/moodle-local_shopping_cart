{{!
    @template local_shopping_cart/report_daily_sums

    This template will render the daily sums for the cash report.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id
    * urls The URLs for the popover

    Example context (json):
    {
        "todo": "todo"
    }
}}
<p>
  <a data-toggle="collapse" href="#collapseDailySums" role="button" aria-expanded="false" aria-controls="collapseDailySums">
    {{#str}} showdailysums, local_shopping_cart {{/str}}
  </a>
</p>
<div class="collapse mb-5" id="collapseDailySums">
  <div class="card card-body">
    <div id="dailysums-selector-form">{{{selectorform}}}</div>
    <h4>{{#str}} titledailysums, local_shopping_cart {{/str}} ({{date}})</h4>
    <p>
      {{#dailysums:exist}}
        <h5>{{#str}} titledailysums:all, local_shopping_cart {{/str}}</h5>
      {{/dailysums:exist}}
      {{#dailysums}}
        <strong>{{paymentmethod}}:</strong> {{dailysumformatted}}<br>
      {{/dailysums}}
    </p>
    <p>
      {{#dailysumscurrentcashier:exist}}
        <h5>{{#str}} titledailysums:current, local_shopping_cart {{/str}} ({{currentcashier:fullname}})</h5>
      {{/dailysumscurrentcashier:exist}}
      {{#dailysumscurrentcashier}}
        <strong>{{paymentmethod}}:</strong> {{dailysumformatted}}<br>
      {{/dailysumscurrentcashier}}
    </p>
  </div>
</div>
